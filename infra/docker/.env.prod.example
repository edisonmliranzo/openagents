# Core service ports / URLs
# If you change WEB_HOST_PORT or API_HOST_PORT, update FRONTEND_URL and NEXT_PUBLIC_API_URL to match.
FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001
WEB_HOST_PORT=3000
API_HOST_PORT=3001
POSTGRES_HOST_PORT=5432
REDIS_HOST_PORT=6379

# Database / Redis
POSTGRES_DB=openagents
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me
DATABASE_URL=postgresql://postgres:change-me@postgres:5432/openagents
REDIS_URL=redis://redis:6379

# API runtime
PORT=3001
# API service listens on this container port
API_PORT=3001
NODE_ENV=production
APPROVAL_CONTINUATION_MODE=inline
AGENT_MAX_TOOL_ROUNDS=6

# Auth / encryption (MUST change)
JWT_SECRET=replace-with-long-random-secret
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=replace-with-different-long-random-secret
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=32-char-hex-key-here
# Private creator bootstrap (do not commit real emails)
CREATOR_EMAIL=
CREATOR_EMAILS=

# LLM providers
DEFAULT_LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_ALLOWED_HOSTS=localhost,127.0.0.1,::1,host.docker.internal
NEXT_PUBLIC_OLLAMA_BASE_URL=http://host.docker.internal:11434

# Web search provider (brave | searxng)
WEB_SEARCH_PROVIDER=brave
BRAVE_SEARCH_API_KEY=
SEARXNG_BASE_URL=
SEARXNG_API_KEY=

# Bybit demo trading tools (optional)
BYBIT_BASE_URL=https://api-demo.bybit.com
BYBIT_PUBLIC_BASE_URL=https://api.bybit.com
BYBIT_API_KEY=
BYBIT_API_SECRET=
BYBIT_DEMO_ONLY=true
BYBIT_RECV_WINDOW=5000

# OpenAgent runtime
NANOBOT_ENABLED=true
NANOBOT_MAX_LOOP_STEPS=8
NANOBOT_SHADOW_MODE=false
NANOBOT_RUNTIME_LABEL=openagent

# Optional memory root inside container
MEMORY_FILES_ROOT=/app/data/memory

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/tools/google/callback

# WhatsApp channel (Twilio, optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
WHATSAPP_DEFAULT_USER_ID=
WHATSAPP_PAIR_COMMAND=link
WHATSAPP_WEBHOOK_TOKEN=
